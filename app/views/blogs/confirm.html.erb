<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-1">
      
    <h4>以下の内容で送信します</h4>
    
    <%= form_for(@blog) do |f| %>
        <%= f.hidden_field :title %>
        <%= f.hidden_field :content %>
        
        <p>タイトル：<%= @blog.title %></p>
        <P>本文：<%= @blog.content %></P>
        <%= f.submit "登録",class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <%= form_for(@blog, url:new_blog_path, method: 'get') do |f| %>
        <%= f.hidden_field :title %>
        <%= f.hidden_field :content %>
        <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
    
  </div>
</div>